<!DOCTYPE html>
<html lang="en">

    <%- include('./partials/head.ejs')%>

<body>

    <%- include('./partials/nav.ejs') %>

    <div class="blogs content">
        
        <h2>All Blogs</h2>
        <% if (blogs.length> 0) { %>
            <% blogs.forEach(blog=>{ %>
                <a href="/blogs/<%= blog._id %>">
                <h1>
                    <%= blog.title %>
                </h1>
                <p>
                    <%= blog.snippet %>
                </p>
                </a>
                <% }) %>
                    <% } else { %>
                        <h1>Nothing to show </h1>
                        <% } %>
    </div>

</body>

</html>